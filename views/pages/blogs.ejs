<div class="jumbotron text-center">
    <h1>All Blogs</h1>
</div>
<% if ( success.length > 0 ) { %>
    <div class="alert alert-success"><%= success %></div>
<% } %>

<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Lastname</th>
            <th>Blog Title</th>
            <th>Description</th>
            <th>Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% for (var blog of blogs) { %>
            <tr>
                <td><%= blog.name %></td>
                <td><%= blog.lastname %></td>
                <td><%= blog.title %></td>
                <td><%= blog.description %></td>
                <td><%= blog.date %></td>
                <td>
                    <a href="/blogs/<%= blog.slug %>" class="btn btn-sm btn-primary">View</a>
                    <a href="/blogs/<%= blog.slug %>/edit" class="btn btn-sm btn-primary">Edit</a>
                    <a href="/blogs/<%= blog.slug %>/delete" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        <% } %>
    </tbody>
</table>